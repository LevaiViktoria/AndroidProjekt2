<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">


    <TextView
        android:id="@+id/termek"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Rendelés"
        android:layout_centerHorizontal="true"
        android:textSize="50dp"
        android:textStyle="bold"
        android:textColor="#000000"
        />

    <ImageView
        android:id="@+id/kep"
        android:layout_width="295dp"
        android:layout_height="239dp"
        android:layout_below="@+id/termek"
        android:layout_centerHorizontal="true"
        android:src="@drawable/fejhallgato" />
    <EditText
        android:id="@+id/nev"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="text"
        android:hint="Név"
        android:layout_below="@+id/kep"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        />
    <EditText
        android:id="@+id/irsz"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="number"
        android:hint="Irányítószám"
        android:layout_below="@+id/nev"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        />
    <EditText
        android:id="@+id/telepules"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Település"
        android:layout_below="@+id/irsz"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        />
    <EditText
        android:id="@+id/szam"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="Utca/Házszám"
        android:layout_below="@+id/telepules"
        android:layout_centerHorizontal="true"
        android:textColor="#000000"
        />
    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/szam"
        >
        <RadioButton
            android:id="@+id/fizetes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:text="Utánvétel"
            app:buttonTint="#5A2E2E"
            />

        <RadioButton
            android:id="@+id/fizetes2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/fizetes"
            android:text="Átutalás"
            app:buttonTint="#5A2E2E"
            />
    </RadioGroup>
    <Button
        android:id="@+id/megrendeles"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/szam"
        android:layout_centerHorizontal="true"
        android:text="Megrendelés"
        android:layout_marginTop="60dp"
        app:backgroundTint="#551414"
        />



</RelativeLayout>